<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cl.lillo.produccionmanzanos.MainActivity">

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- pesaje de cajas -->
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Registro de Bins"
                        android:textColor="#fff"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ultima sincronización: " />

                        <TextView
                            android:id="@+id/txtLastSync"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/D" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - Bandejas día: " />

                        <TextView
                            android:id="@+id/txtCountBandejas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/D" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btExport"
                            android:layout_width="wrap_content"
                            android:layout_height="81dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:drawableTop="@drawable/weight"
                            android:onClick="insertPesaje"
                            android:padding="16dp"
                            android:text="Exportar"
                            android:textColor="#fff" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="81dp"
                            android:background="@android:color/holo_red_light"
                            android:drawableTop="@drawable/clear"
                            android:onClick="clear"
                            android:padding="16dp"
                            android:text="Limpiar"
                            android:textColor="#fff" />
                    </LinearLayout>

                </LinearLayout>

                <!-- asignacion de tarjetas -->
                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Credenciales"
                        android:textColor="#fff"
                        android:textSize="25sp" />

                    <EditText
                        android:id="@+id/txtRut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="1234567890-k"
                        android:focusable="false"
                        android:hint="Rut: 1111111-1"
                        android:maxLength="10"
                        android:padding="16dp"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="19dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla1"
                                android:text="1"
                                android:textSize="20sp" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla2"
                                android:text="2"
                                android:textSize="20sp" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla3"
                                android:text="3"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla4"
                                android:text="4"
                                android:textSize="20sp" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla5"
                                android:text="5"
                                android:textSize="20sp" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla6"
                                android:text="6"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla7"
                                android:text="7"
                                android:textSize="20sp" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla8"
                                android:text="8"
                                android:textSize="20sp" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla9"
                                android:text="9"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="teclaguion"
                                android:text="-"
                                android:textSize="20sp" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla0"
                                android:text="0"
                                android:textSize="20sp" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="teclak"
                                android:text="K"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="teclaborrar"
                                android:text="C"
                                android:textSize="20sp" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="teclaborrarAll"
                                android:text="AC"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/scannerButton"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/colorPrimary"
                        android:enabled="false"
                        android:onClick=""
                        android:padding="16dp"
                        android:text="Asignar credencial"
                        android:textColor="#fff" />

                </LinearLayout>

                <!-- sincronización -->
                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Sincronización"
                        android:textColor="#fff"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageButton
                            android:id="@+id/btSync"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/sync2"
                            android:onClick="syncCompleta" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sincronizar trabajadores"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ultima sincronización completa: " />

                            <TextView
                                android:id="@+id/txtLastSyncCompleta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S/D" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Al sincronizar se actualizarán datos necesarios para el funcionamiento óptimo de la aplicación, esto incluye datos trabajadores nuevos y antiguos, además de otros datos importantes.
Tenga en cuenta que la sincronización puede tardar unos minutos." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageButton
                            android:id="@+id/btSyncPesajes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/sync2"
                            android:onClick="syncPesaje" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sincronizar bins"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ultima sincronización Pesajes: " />

                            <TextView
                                android:id="@+id/txtLastSyncPesajes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S/D" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sincronización de bins registrados con el servidor, considerar que mientras mas tiempo pase entre una sincronizacion y otra, tomará mas tiempo sincronizar." />
                    </LinearLayout>

                </LinearLayout>

                <!-- opciones (consultar por trabajador) -->


            </FrameLayout>
        </LinearLayout>
    </TabHost>


</RelativeLayout>

